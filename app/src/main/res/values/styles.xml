<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopBarPanelStyle">
        <!-- Common -->
        <item name="uxsdk_itemsMarginRight">@dimen/uxsdk_spacing_normal</item>
        <item name="uxsdk_itemsSpacing">@dimen/uxsdk_spacing_normal</item>

        <!-- System Status -->
        <item name="uxsdk_systemStatusMessageTextSize">@dimen/app_system_message_text_size</item>
    </style>

    <!-- Fly Zone -->
    <style name="LeftButtonList">
        <item name="android:minHeight">@dimen/left_button_list_button_height</item>
        <item name="android:layout_width">@dimen/left_button_list_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_5_in_sw320dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/left_button_list_button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>